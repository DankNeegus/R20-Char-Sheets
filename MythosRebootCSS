    line-height: 150%;
}
input.sheet-sanityMeter[value="0"] ~ div.sheet-sanityMeter {
    background: url(https://cdn.discordapp.com/attachments/682792603531477035/829555202280914985/Fire.jpg);
}
    input.sheet-sanityMeter[value="0"] ~ div.sheet-sanityMeter:before {
        content: "You've lost it.";
    }
input.sheet-sanityMeter[value="1"] ~ div.sheet-sanityMeter {
    background: linear-gradient(to left, #41124d 90%, #db0af7 5%,#cf0ae9 95%, #b112c6 100%);
}
    input.sheet-sanityMeter[value="1"] ~ div.sheet-sanityMeter:before {
        content:"You're losing it...";
    }
input.sheet-sanityMeter[value="2"] ~ div.sheet-sanityMeter {
    background: linear-gradient(to left, #41124d 80%, #b327c6 10%,#9b1cac 90%, #820f91 100%);
}
    input.sheet-sanityMeter[value="2"] ~ div.sheet-sanityMeter:before {
        content:"You're starting to lose it...";
    }
input.sheet-sanityMeter[value="3"] ~ div.sheet-sanityMeter {
    background: linear-gradient(to left, #41124d 70%, #8f169f 20%,#7b098a 80%, #921d1d 100%);
}
    input.sheet-sanityMeter[value="3"] ~ div.sheet-sanityMeter:before {
        content:"You're really slipping...";
    }
input.sheet-sanityMeter[value="4"] ~ div.sheet-sanityMeter {
    background: linear-gradient(to left, #4b0c5b 60%, #921d1d 30%,#ce1d1d 70%, #ee0a0a 100%);
}
